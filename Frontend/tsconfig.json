{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "components/layout/MainLayout.tsx",
    "app/(admin-site)/(protected)/layout.tsx",
    "app/(admin-site)/(apps)/(dashboards)/dashboard/charts.tsx",
    "app/(admin-site)/(apps)/(dashboards)/dashboard/data.tsx",
    "app/(admin-site)/(apps)/(dashboards)/dashboard/page.tsx",
    "app/(admin-site)/(auth)/iniciar-sesion/page.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}